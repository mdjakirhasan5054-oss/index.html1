<script>
// সঠিক Key লিস্ট
const correctKeys = ["BDBOY123","JOINBD5054","SUBYT2025"];

let balance = 0;
let unlockedGame = 1;

function updateBalance(amount){
  balance += amount;
  document.getElementById('balance').innerText = `💸 ${balance} 💸`;
}

function checkKey(){
  let key = document.getElementById('keyInput').value.trim();
  if(correctKeys.includes(key)){
    alert("✅ Key Accepted! Games unlocked.");
    document.getElementById('keyDiv').style.display = 'none';
    document.getElementById('games').style.display = 'block';
    document.getElementById('telegram').style.display = 'block';
    refreshGames();
  } else {
    alert("❌ Wrong Key! Try again.");
  }
}

function refreshGames(){
  for(let i=1;i<=3;i++){
    let g = document.getElementById('game'+i);
    if(i<=unlockedGame) g.classList.remove('locked');
    else g.classList.add('locked');
  }
}

for(let i=1;i<=3;i++){
  document.getElementById('game'+i).addEventListener('click', function(){
    if(i>unlockedGame){ alert("Complete previous game first!"); return; }
    if(i===3){
      let ans = prompt("🔑 Enter the secret key again for Emoji Match:");
      if(correctKeys.includes(ans)){
        alert("Correct! +20 coins");
        updateBalance(20);
      } else { alert("Wrong! No reward"); return; }
    } else {
      alert("Game completed! +10 coins");
      updateBalance(10);
    }
    if(unlockedGame < i+1) unlockedGame = i+1;
    refreshGames();
  });
}
</script>

